# BRAVO FORMS v2.0 - ENVIRONMENT CONFIGURATION
# Copy this file to .env.local and fill in your actual values

# SUPABASE CONFIGURATION (PostgreSQL Backend)
VITE_SUPABASE_URL=https://your-project.supabase.co
VITE_SUPABASE_ANON_KEY=your_supabase_anon_key_here

# AUTHENTICATION
VITE_JWT_SECRET=your_jwt_secret_key_here
VITE_OAUTH_GOOGLE_CLIENT_ID=your_google_client_id
VITE_OAUTH_MICROSOFT_CLIENT_ID=your_microsoft_client_id

# API CONFIGURATION
VITE_API_BASE_URL=http://localhost:3000
VITE_API_TIMEOUT=30000

# VERCEL DEPLOYMENT
VERCEL_URL=https://your-app.vercel.app
VERCEL_ENV=production

# FEATURES CONFIGURATION
VITE_ENABLE_WEBHOOKS=true
VITE_ENABLE_ANALYTICS=true
VITE_ENABLE_COLLABORATIVE_EDITING=true
VITE_ENABLE_VERSION_CONTROL=true

# THIRD-PARTY INTEGRATIONS
VITE_ZAPIER_API_KEY=your_zapier_api_key
VITE_MAKE_API_KEY=your_make_api_key

# EMAIL CONFIGURATION (for notifications)
VITE_SMTP_HOST=smtp.office365.com
VITE_SMTP_PORT=587
VITE_SMTP_USER=notifications@yourdomain.com
VITE_SMTP_PASSWORD=your_email_password
VITE_SMTP_FROM=no-reply@yourdomain.com

# DATABASE CONFIGURATION (if not using Supabase)
VITE_DB_HOST=localhost
VITE_DB_PORT=5432
VITE_DB_NAME=bravo_forms
VITE_DB_USER=postgres
VITE_DB_PASSWORD=your_password

# APPLICATION SETTINGS
VITE_APP_NAME=Bravo Forms
VITE_APP_VERSION=2.0.0
VITE_COMPANY_NAME=Bravo Serviços Logísticos
VITE_LOG_LEVEL=info

# DEVELOPMENT SETTINGS
VITE_DEV_MODE=false
VITE_DEBUG=false
